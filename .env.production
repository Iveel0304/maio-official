# Production Environment Variables for MAIO Platform
# Copy this file to .env.local and update with your production values

# Frontend API URL (update with your production backend URL)
VITE_API_URL=https://your-backend-domain.com

# MongoDB Configuration (for your backend deployment)
MONGODB_URI=mongodb+srv://your-user:your-password@your-cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=maio-news

# Server Port (for backend deployment)
PORT=3001

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# JWT Secret (generate a secure secret for authentication)
JWT_SECRET=your-super-secure-jwt-secret-here

# Node Environment
NODE_ENV=production
